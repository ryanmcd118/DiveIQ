generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Authentication models (NextAuth.js)
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  password      String?   // hashed password for credentials provider
  sessionVersion Int      @default(0) // Incremented to invalidate all JWT sessions except current
  firstName     String?   // User's first name
  lastName      String?   // User's last name (nullable for Google OAuth users)
  image         String?
  avatarUrl     String?   // Canonical avatar URL (preferred over image)
  birthday      DateTime? // User's birthday (private, not displayed publicly)
  location      String?   // User's location (city, country)
  bio           String?   // User's bio/about
  pronouns      String?   // User's pronouns
  website       String?   // User's website URL
  
  // DiveIQ-specific profile fields
  homeDiveRegion          String?  // Home dive region
  languages               String?  // Comma-separated list of languages
  primaryDiveTypes        String?  // JSON array of dive types (e.g., ["Recreational", "Wreck", "Cold Water"])
  experienceLevel         String?  // "Beginner" | "Intermediate" | "Advanced"
  yearsDiving             Int?     // Years of diving experience
  certifyingAgency        String?  // Certifying agency (e.g., "PADI", "NAUI", "SSI")
  typicalDivingEnvironment String? // JSON array (e.g., ["Tropical", "Cold Water", "Wreck"])
  lookingFor              String?  // JSON array (e.g., ["Buddies", "Trips", "Instructors"])
  favoriteDiveType        String?  // Favorite dive type
  favoriteDiveLocation    String?  // Favorite dive location
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  diveLogs      DiveLog[]
  divePlans     DivePlan[]
  gearItems     GearItem[]
  gearKits      GearKit[]
  accounts      Account[]
  sessions      Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime
  
  @@unique([identifier, token])
}

// Application models
model DiveLog {
  id          String   @id @default(cuid())
  userId      String?  // Optional to allow future guest data migration
  date        String
  region      String
  siteName    String
  maxDepth    Int
  bottomTime  Int
  waterTemp   Int?
  visibility  Int?
  buddyName   String?
  notes       String?
  createdAt   DateTime @default(now())
  
  user        User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  gearItems   DiveGearItem[]
  
  @@index([userId])
}

model DivePlan {
  id              String   @id @default(cuid())
  userId          String?  // Optional to allow future guest data migration
  date            String
  region          String
  siteName        String
  maxDepth        Int
  bottomTime      Int
  experienceLevel String   // 'Beginner' | 'Intermediate' | 'Advanced'
  riskLevel       String   // 'Low' | 'Moderate' | 'High'
  aiAdvice        String?
  createdAt       DateTime @default(now())
  
  user            User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
}

// Gear models
model GearItem {
  id                  String    @id @default(cuid())
  userId              String
  type                String    // enum: BCD, REGULATOR, WETSUIT, DIVE_COMPUTER, FINS, MASK, SNORKEL, TANK, WEIGHTS, OTHER
  manufacturer        String
  model               String
  nickname            String?
  purchaseDate        DateTime?
  notes               String?
  isActive            Boolean   @default(true)
  lastServicedAt      DateTime?
  serviceIntervalMonths Int?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  kitItems            GearKitItem[]
  diveGearItems       DiveGearItem[]
  
  @@index([userId])
  @@index([userId, isActive])
}

model GearKit {
  id          String    @id @default(cuid())
  userId      String
  name        String
  isDefault   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  kitItems    GearKitItem[]
  
  @@index([userId])
  @@index([userId, isDefault])
}

model GearKitItem {
  id          String    @id @default(cuid())
  kitId       String
  gearItemId  String
  
  kit         GearKit   @relation(fields: [kitId], references: [id], onDelete: Cascade)
  gearItem    GearItem  @relation(fields: [gearItemId], references: [id], onDelete: Cascade)
  
  @@unique([kitId, gearItemId])
  @@index([kitId])
  @@index([gearItemId])
}

model DiveGearItem {
  id          String    @id @default(cuid())
  diveId      String
  gearItemId  String
  
  dive        DiveLog   @relation(fields: [diveId], references: [id], onDelete: Cascade)
  gearItem    GearItem  @relation(fields: [gearItemId], references: [id], onDelete: Cascade)
  
  @@unique([diveId, gearItemId])
  @@index([diveId])
  @@index([gearItemId])
}
